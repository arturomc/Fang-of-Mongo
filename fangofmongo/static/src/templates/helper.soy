/**
 * Renders the footer content
 */
{template .footer private="true"}
  <footer class="footer row span12">
    <hr>
    <p class="pull-right"><a href="#">
      {msg desc="The text for the -back to top- link"}
        Back to top
      {/msg}
    </a></p>
    {call .credits /}
  </footer>
{/template}


