{namespace mangoadmin.templates.helper}

/**
 * Renders the top/nav bar
 */
{template .topbar}
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="./">
          MangoAdmin
        </a>
        <ul class="nav">
          <li><a href="#" onclick="mangoadmin.main()">New Server</a></li>
          <li><a href="#">About</a></li>
        </ul>
        <ul class="nav pull-right">
          <li class="divider-vertical"></li>
          <li><a>Server info:</a></li>
          <li><a id="mongodb-info"></a></li>
        </ul>
      </div>
    </div>
  </div>
{/template}


/**
 * Renders the serverinfo
 * @param version  The mongoDB server verions
 * @param bits the mongoDb server bits (32 or 64, most likely)
 */
{template .serverinfo}
  [version: {$version}, bits: {$bits}]
{/template}


/**
 * Renders the hero unit
 * @param? header  The Header, usually the brand name
 * @param? description  A descriptive Text
 * @param? skipHeroUnit  Whether to display the unit in the first place
 */
{template .herounit private="true"}
  {if not $skipHeroUnit}
    <div class="hero-unit">
      {if $header}
        <h1>{print $header |noAutoescape}</h1>
      {/if}
      {if $description}
        <p>{print $description |noAutoescape}</p>
      {/if}
    </div>
  {/if}
{/template}


